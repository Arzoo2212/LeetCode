class Solution {
public:
    bool isPerfectSquare(int num) {
        int s=1;
        int e=num;
        int ans=0;
        if(num==0 || num ==1) return true;
        while(s<=e){
            long mid=s+(e-s)/2;
            long sq=mid*mid;
           if(sq==num){
             return true;
           }
           else if(sq>num){
                e=mid-1;
            }
            else if(sq<num){
                s=mid+1;
                ans=mid;  
            }
        }
        return false;
    }
};
